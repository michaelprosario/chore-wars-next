@model IEnumerable<ChoreWars.Core.Entities.Quest>
@{
    ViewData["Title"] = "DM Dashboard - Quest Management";
}

<div class="row mb-4">
    <div class="col">
        <h2>Dungeon Master Dashboard</h2>
        <p class="lead">Manage quests for @ViewBag.PartyName</p>
        <div class="alert alert-info">
            <strong>Party Invite Code:</strong> <code>@ViewBag.InviteCode</code>
            <br />
            <small>Share this code with family members so they can join your party!</small>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Quest
        </a>
        <a asp-action="Import" class="btn btn-success">
            <i class="bi bi-upload"></i> Import Quests
        </a>
        <a asp-action="Verifications" class="btn btn-warning">
            <i class="bi bi-check-circle"></i> Pending Verifications
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var quest in Model)
        {
            <div class="col">
                <div class="card h-100 @(!quest.IsActive ? "border-secondary opacity-75" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@quest.Title</h5>
                            @if (quest.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>

                        <p class="card-text text-muted small">@quest.Description</p>

                        <div class="mb-3">
                            <div class="d-flex gap-2 mb-2">
                                @if (quest.QuestType == ChoreWars.Core.Entities.QuestType.Daily)
                                {
                                    <span class="badge bg-info">Daily</span>
                                }
                                else if (quest.QuestType == ChoreWars.Core.Entities.QuestType.Weekly)
                                {
                                    <span class="badge bg-primary">Weekly</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">One-Time</span>
                                }

                                @if (quest.Difficulty == ChoreWars.Core.Entities.DifficultyLevel.Easy)
                                {
                                    <span class="badge bg-success">Easy</span>
                                }
                                else if (quest.Difficulty == ChoreWars.Core.Entities.DifficultyLevel.Medium)
                                {
                                    <span class="badge bg-warning text-dark">Medium</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hard</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between text-center">
                                <div>
                                    <div class="fw-bold text-primary">@quest.XPReward</div>
                                    <small class="text-muted">XP</small>
                                </div>
                                <div>
                                    <div class="fw-bold text-warning">@quest.GoldReward</div>
                                    <small class="text-muted">Gold</small>
                                </div>
                            </div>
                        </div>

                        @if (quest.StrengthBonus > 0 || quest.IntelligenceBonus > 0 || quest.ConstitutionBonus > 0)
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Stat Bonuses:</small>
                                <div class="d-flex gap-2">
                                    @if (quest.StrengthBonus > 0)
                                    {
                                        <span class="badge bg-light text-dark">üí™ +@quest.StrengthBonus</span>
                                    }
                                    @if (quest.IntelligenceBonus > 0)
                                    {
                                        <span class="badge bg-light text-dark">üß† +@quest.IntelligenceBonus</span>
                                    }
                                    @if (quest.ConstitutionBonus > 0)
                                    {
                                        <span class="badge bg-light text-dark">‚ù§Ô∏è +@quest.ConstitutionBonus</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@quest.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button type="button" class="btn btn-outline-danger btn-sm flex-fill" data-bs-toggle="modal" data-bs-target="#deleteModal-@quest.Id">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal-@quest.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@quest.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel-@quest.Id">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the quest "<strong>@quest.Title</strong>"?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" asp-route-id="@quest.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>No quests yet!</h5>
        <p>Create your first quest to get started with Chore Wars.</p>
    </div>
}
